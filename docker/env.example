# Docker Environment Variables Example
# Copy this file to .env.local for local development

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_APP_USERNAME=banglamphu_user
MONGO_APP_PASSWORD=banglamphu_password
MONGO_DATABASE=banglamphu

# Next.js Configuration
NODE_ENV=production
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Vercel Blob Storage (Optional)
VERCEL_BLOB_STORE_ID=your-blob-store-id
VERCEL_BLOB_READ_WRITE_TOKEN=your-blob-token

# Application URLs
APP_URL=http://localhost
API_URL=http://localhost/api

# Security
JWT_SECRET=your-jwt-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
